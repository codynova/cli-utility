{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"outDir": "dist",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext"],
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"declarationDir": ".",
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"pretty": true
	}
}
